{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run VSCode Blazor Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/src/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/src/extension/out/**/*.js"
            ],
            "preLaunchTask": "npm: compile - src/extension"
        }
    ]
}